<?xml version="1.0" encoding="utf-8"?>
<ValidationRules>
  <Rule Id="数字" Expression="^[0-9]+\.{0,1}[0-9]{0,2}$" Message="不是有效的数字" />
  <Rule Id="电子邮件" Expression="^\w+([\.\-]\w+)*\@\w+([\.\-]\w+)*\.\w+$" Message="不是有效的电子邮件地址" />
  <Rule Id="手机号码" Expression="^((\(\d{3}\))|(\d{3}\-))?13\d{9}$" Message="不是有效的手机号码" />
  <Rule Id="身份证号" Expression="^[1-9]\d{5}[1-9]\d{3}((0\d)|(1[0-2]))(([0|1|2]\d)|3[0-1])\d{4}$" Message="不是有效的身份证号" />
</ValidationRules>