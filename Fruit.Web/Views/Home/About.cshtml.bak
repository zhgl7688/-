           function calclen(x,y,obj){
		if(x!=0||y!=0){
			for(var i= 0;x>100||y>100;){
				x=x/1.1;
				y=y/1.1;
			}	
			for(var i= 0;x<60&&y<60;){
				x=x*1.1;
				y=y*1.1;
			}
		 }
		xw = x;
		yw = y;
		if(x<1&&!x<=0){
			xw = 1;
		}
		if(y<1&&!y<=0){
			yw = 1;
		}								
		obj.getElementsByClassName("t1").item(0).style.width = xw+"%"; 
		obj.getElementsByClassName("t2").item(0).style.width = yw+"%";
	    }
