<script>
	var base64Data;
    var filename;
	function UpdataFile(id) {

	if (!base64Data) {
	alert("请拍照后上传");
	return;
	}
	filename = "";
	var timestamp = new Date().getTime();;
	console.log(timestamp)
	var captureCount = timestamp;
	//当前时间戳为：1403149534
	console.log(captureCount)
	var fid = document.getElementById("FID");
	console.log(fid);
	filename =fid.value+ "_" + captureCount + ".jpg";
	var url = "/file/UploadBase64";
	var data = { base64Data: base64Data, filename: filename };
//	console.log(data);
	$.ajax({
	url: url,
	type: "post",
	data: data,
	dataType: "json",
	success: function (data) {
	if (data.success == true) {
	var obj = document.getElementById("Scan" + id);
	obj.value = data.filename;
	console.log(data.filename);
	console.log("上传成功");
	} else {
	alert("上传失败");
	}
	},
	error: function () {
	console.log("上传失败");
	}
	});
	}

	var video = document.getElementById('video');
	var canvas = document.getElementById('canvas');
	var ctx = canvas.getContext('2d');
	var width = video.width;
	var height = video.height;
	canvas.width = video.offsetWidth;
	canvas.height = video.offsetHeight;
	function liveVideo() {
	var URL = window.URL || window.webkitURL;   // 获取到window.URL对象
	navigator.getUserMedia({
	video: true
	}, function (stream) {
	video.src = URL.createObjectURL(stream);   // 将获取到的视频流对象转换为地址
	video.play();   // 播放
	//点击截图
	document.getElementById("snap").addEventListener('click', function () {
	    ctx.drawImage(video, 0, 0, video.offsetWidth, video.offsetHeight);
	// var url = canvas.toDataURL('image/png');
	var imgData = canvas.toDataURL();
	//将图像转换为base64数据
	base64Data = imgData.substr(22);
	//console.log(base64Data);
	});
	}, function (error) {
	console.log(error.name || error);
	});
	}
	document.getElementById("live").addEventListener('click', function () {
	liveVideo();
	});


</script>