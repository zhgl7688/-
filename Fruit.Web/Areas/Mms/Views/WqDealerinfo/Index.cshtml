@section scripts {
<script type="text/javascript">
    $(function(){
        var db = fruit.databind.root;
        $.extend(db.options, {
            add: function(){
                fruit.ajax({
                        url:'/api/Mms/WqDealerinfo/NewCompCode',
                        success:function(data) {
                            parent.showDocTab('icon-house_in', '工作日志管理明细', '/edit/' + data);
                        }
                    })
            },
            edit: function(){
                    var grid = db.binds.grid;
                    var row = grid.getSelected();
                    if(row == null) {
                        fruit.message('warning', '请先选择一个工作日志管理');
                        return;
                    }
                    parent.showDocTab('icon-house_in', '工作日志管理明细', '/edit/' + row.CompCode);
            },
        });
    });
</script>
}
<div class="z-toolbar">

    <a class="easyui-linkbutton" iconcls="icon-arrow_refresh" plain="true" data-bind="click:'refresh'">刷新</a>
    <a class="easyui-linkbutton" iconcls="icon-add" plain="true" data-bind="click:'add'">新增</a>
    <a class="easyui-linkbutton" iconcls="icon-edit" plain="true" data-bind="click:'edit'">编辑</a>
    <a class="easyui-linkbutton" iconcls="icon-cross" plain="true" data-bind="click:'delete'">删除</a>
    <a class="easyui-splitbutton" plain="true" data-options="iconCls:'icon-download'" suffix="xls" data-bind="click:'download'">导出</a>
</div>
<table id="grid" data-bind="datagrid" data-options="fixSize:{w:4, h:40}, rownumbers:true, method:'get', url:'/api/mms/wqdealerinfo', pagination:true, pageSize:20">
<thead>
<tr>
    <th field="CompCode">所属公司    </th>
    <th field="DealerCode">客户编号    </th>
    <th field="DealerName">客户名称    </th>
    <th field="Address">地址    </th>
    <th field="Contact1">联系人1    </th>
    <th field="Tel1">联系电话1    </th>
    <th field="Mobile1">手机1    </th>
    <th field="Contact2">联系人2    </th>
    <th field="Tel2">联系电话2    </th>
    <th field="Mobile2">手机2    </th>
    <th field="Long">位置（经度）    </th>
    <th field="Lat">位置（纬度）    </th>
    <th field="DealerType">客户类型    </th>
    <th field="DealerStatus">客户状态    </th>
    <th field="UserCode">所属业务员    </th>
    <th field="Remark">备注    </th>
    <th field="CreatePerson">创建人    </th>
    <th field="CreateDate" data-options="editor:{type:'datebox',options:{required:false}}">创建时间    </th>
    <th field="UpdatePerson">最后修改人    </th>
    <th field="UpdateDate" data-options="editor:{type:'datebox',options:{required:false}}">最后修改时间    </th>
</tr>
</thead>
</table>
