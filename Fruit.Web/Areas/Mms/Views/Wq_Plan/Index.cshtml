@section scripts {
<script type="text/javascript">
   var col_wq_plan_UserCode_RefText_formatter = function(v, r) {return r.UserCode_RefText;}
   var col_wq_plan_Month_RefText_formatter = function(v, r) {return r.Month_RefText;}
    $(function(){
        if($('#searchDialogTemplate').length == 1) {
            $('#showSearch').show();
        }
        var db = fruit.databind.root;
        var data = @MvcHtmlString.Create(JsonExtension.ToJson(Model));
        db.loadData(data);

            $.extend(db.options, {
                searchClick: function(){
                    var serach = db.getData('serach');
                    db.invoke('setLoadParams', serach);
                },
                showSearchClick: function() {
                    var serachDialog = $('<div></div>').html($('#searchDialogTemplate').html());
                    var serachDialogDB = new fruit.databind(serachDialog[0], {
                        onInit:function(){
                            this.loadData(data);
                            var serach = db.getData('serach');
                            this.loadData({serach:serach});
                        }
                    });
                    serachDialog.dialog({title:'搜索', width:600, height:500, cache:false,modal:true,buttons:[
                        {text:'搜索',handler:function(){
                            var serach = serachDialogDB.getData('serach');
                            db.loadData({serach:serach});
                            db.invoke('setLoadParams', serach);
                            serachDialog.dialog('close');
                        }},
                        {text:'关闭',handler:function(){
                            serachDialog.dialog('close');
                        }},
                    ], onClose:function(){
                        serachDialog.dialog('destroy');
                    }});
                },
                clearClick: function(){
                    db.clearData('serach');
                    db.invoke('setLoadParams', {});
                }
            });
        $.extend(db.options, {
            add: function(){
                fruit.ajax({
                        url:'/api/Mms/Wq_Plan/Newid',
                        success:function(data) {
                            parent.showDocTab('icon-house_in', '销售计划明细', '/Mms/Wq_Plan/edit/' + data);
                        }
                    })
            },
            edit: function(){
                    var grid = db.binds.grid;
                    var row = grid.getSelected();
                    if(row == null) {
                        fruit.message('warning', '请先选择一个销售计划');
                        return;
                    }
                    parent.showDocTab('icon-house_in', '销售计划明细', '/Mms/Wq_Plan/edit/' + row.id);
            },
             'delete': function() {
                    var grid = db.binds.grid;
                    var rows = grid.getSelections();
                    if(rows.length == 0) return;
                    var ids = [];
                    $.each(rows, function(){
                        ids.push(this.id);
                    });
                    $.messager.confirm('确认', '您确认要删除所选记录吗？', function(r){
                        if(r){
                            grid.jq.showLoading('正在处理…');
                            fruit.ajax({
                                method:'DELETE',
                                url: '/api/Mms/Wq_Plan/'+ids.join(),
                                success: function(data) {
                                    grid.jq.hideLoading();
                                    grid.refresh();
                                }
                            })
                        }
                    });
                },
        });
    });
</script>
}
<div class="z-toolbar">

    <a class="easyui-linkbutton" iconcls="icon-arrow_refresh" plain="true" data-bind="click:'refresh'">刷新</a>
    <a class="easyui-linkbutton" iconcls="icon-add" plain="true" data-bind="click:'add'">新增</a>
    <a class="easyui-linkbutton" iconcls="icon-edit" plain="true" data-bind="click:'edit'">编辑</a>
    <a class="easyui-linkbutton" iconcls="icon-cross" plain="true" data-bind="click:'delete'">删除</a>
    <a class="easyui-splitbutton" plain="true" data-options="iconCls:'icon-download'" suffix="xls" data-bind="click:'download'">导出</a>
    <div class="condition_buttons">
        <a id="showSearch" style="display:none" class="easyui-linkbutton" data-bind="click:'showSearchClick'" data-options="iconCls:'icon-search', plain:true" href="#">更多条件...</a>
        <a class="easyui-linkbutton" data-bind="click:'searchClick'" data-options="iconCls:'icon-search', plain:true" href="#">搜索</a>
        <a class="easyui-linkbutton" data-bind="click:'clearClick'" data-options="iconCls:'icon-clear', plain:true" href="#">清空</a>
    </div>
</div>
<div id="condition" class="container_12" style="position:relative;height:35px">
    <div class="grid_1 lbl">业务员</div>
    <div class="grid_2 val"><input data-bind="value:'serach.UserCode'" type="text" class="z-txt" /></div>
    <div class="grid_1 lbl">月份</div>
    <div class="grid_2 val"><input data-bind="value:'serach.Month', datasource:'dataSource.Month'" type="text" class="z-txt easyui-combobox" /></div>
    <div class="grid_1 lbl">创建日期</div>
    <div class="grid_2 val"><input data-bind="value:'serach.CreateDate'" type="text" class="z-txt easyui-daterange" /></div>
    <div class="clear"></div>
    <div class="clear"></div>
    <div class="clear"></div>
</div>
<table id="grid" data-bind="datagrid" data-options="fixSize:{w:4, h:75}, rownumbers:true, method:'get', url:'/api/mms/wq_plan', pagination:true, pageSize:20, checkOnSelect:true, selectOnCheck:true, singleSelect:false">
<thead>
<tr>
    <th field="SelectedRowKey" data-options="checkbox:true"></th>
    <th field="UserCode" data-options="editor:{type:'popup', options:{rule:'用户选择', textField:'UserCode_RefText', onSelect:fruit.popupColumnSelected, required:false}}" formatter="col_wq_plan_UserCode_RefText_formatter" width="80">业务员    </th>
    <th field="Month" data-options="editor:{type:'combobox', options:{required:false}}" formatter="col_wq_plan_Month_RefText_formatter" width="80">月份    </th>
    <th field="SellAmt" data-options="editor:{type:'numberbox',options:{precision:2, required:false}}" width="100">销售计划(万)    </th>
    <th field="IncomeAmt" data-options="editor:{type:'numberbox',options:{precision:2, required:false}}" width="100">回款计划(万)    </th>
</tr>
</thead>
</table>
