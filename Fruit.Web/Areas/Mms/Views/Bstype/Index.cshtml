@section scripts {
<script type="text/javascript">
    $(function(){
        var db = fruit.databind.root;
        $.extend(db.options, {
            add: function(){
                fruit.ajax({
                        url:'/api/Mms/Bstype/NewDataTypeID',
                        success:function(data) {
                            parent.showDocTab('icon-application_add', '基础类型明细', '/Mms/Bstype/edit/' + data);
                        }
                    })
            },
            edit: function(){
                    var grid = db.binds.grid;
                    var row = grid.getSelected();
                    if(row == null) {
                        fruit.message('warning', '请先选择一个基础类型');
                        return;
                    }
                    parent.showDocTab('icon-house_in', '基础类型明细', '/Mms/Bstype/edit/' + row.DataTypeID);
            },
             'delete': function() {
                    var grid = db.binds.grid;
                    var row = grid.getSelected();
                    $.messager.confirm('确认', '您确认要删除所选记录吗？', function(r){
                        if(r){
                            grid.jq.showLoading('正在处理…');
                            fruit.ajax({
                                method:'DELETE',
                                url: '/api/Mms/Bstype/'+row.DataTypeID,
                                success: function(data) {
                                    grid.jq.hideLoading();
                                    grid.refresh();
                                }
                            })
                        }
                    });
                },
        });
    });
</script>
}
<div class="z-toolbar">

    <a class="easyui-linkbutton" iconcls="icon-arrow_refresh" plain="true" data-bind="click:'refresh'">刷新</a>
    <a class="easyui-linkbutton" iconcls="icon-add" plain="true" data-bind="click:'add'">新增</a>
    <a class="easyui-linkbutton" iconcls="icon-edit" plain="true" data-bind="click:'edit'">编辑</a>
    <a class="easyui-linkbutton" iconcls="icon-cross" plain="true" data-bind="click:'delete'">删除</a>
    <a class="easyui-splitbutton" plain="true" data-options="iconCls:'icon-download'" suffix="xls" data-bind="click:'download'">导出</a>
</div>
<table id="grid" data-bind="datagrid" data-options="fixSize:{w:4, h:40}, rownumbers:true, method:'get', url:'/api/mms/bstype', pagination:true, pageSize:20">
<thead>
<tr>
    <th field="DataTypeID">类型编号    </th>
    <th field="DataTypeName" data-options="editor:{type:'validatebox',options:{required:true}}">类型名称    </th>
    <th field="Remark" data-options="editor:{type:'validatebox',options:{required:false}}">备注    </th>
</tr>
</thead>
</table>
